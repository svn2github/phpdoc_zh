  <refentry id="function.ocicolumntype">
   <refnamediv>
    <refname>ocicolumntype</refname>
    <refpurpose>返回列的数据类型</refpurpose>
   </refnamediv>
   <refsect1>
    <title>描述</title>
     <methodsynopsis>
      <type>mixed</type><methodname>ocicolumntype</methodname>
      <methodparam><type>resource</type><parameter>stmt</parameter></methodparam>
      <methodparam><type>int</type><parameter>col</parameter></methodparam>
     </methodsynopsis>
    <simpara>
     <function>ocicolumntype</function>
返回相应列序号的数据类型，列序号从1开始计算。
    </simpara>
    <para>
     <example>
      <title><function>ocicolumntype</function></title>
      <programlisting role="php">
<![CDATA[
<?php   
    $conn = OCILogon("scott", "tiger");
    $stmt = OCIParse($conn, "select * from emp");
    OCIExecute($stmt);
    echo "<table border=\"1\">";
    echo "<tr>";
    echo "<th>Name</th>";
    echo "<th>Type</th>";
    echo "<th>Length</th>";
    echo "</tr>";
    $ncols = OCINumCols($stmt);
    for ($i = 1; $i <= $ncols; $i++) {
        $column_name  = OCIColumnName($stmt, $i);
        $column_type  = OCIColumnType($stmt, $i);
        $column_size  = OCIColumnSize($stmt, $i);
        echo "<tr>";
        echo "<td>$column_name</td>";
        echo "<td>$column_type</td>";
        echo "<td>$column_size</td>";
        echo "</tr>";
    }
    echo "</table>\n"; 
    OCIFreeStatement($stmt);  
    OCILogoff($conn);   
?>   
]]>
      </programlisting>
     </example>
    </para>
    <simpara>
     参见 <function>ocinumcols</function>，
     <function>ocicolumnname</function>，
     和 <function>ocicolumnsize</function>。
    </simpara>
   </refsect1>
  </refentry>

