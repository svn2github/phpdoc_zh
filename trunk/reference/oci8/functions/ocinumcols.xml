  <refentry id="function.ocinumcols">
   <refnamediv>
    <refname>ocinumcols</refname>
    <refpurpose>
     返回列数
    </refpurpose>
   </refnamediv>
   <refsect1>
    <title>描述</title>
     <methodsynopsis>
      <type>int</type><methodname>ocinumcols</methodname>
      <methodparam><type>resource</type><parameter>stmt</parameter></methodparam>
     </methodsynopsis>
    <para>
     <function>ocinumcols</function> 返回在语句 <parameter>stmt</parameter> 中的列数。
    </para>
    <para>
     <example>
      <title><function>ocinumcols</function></title>
      <programlisting role="php">
<![CDATA[
<?php   
    echo "<pre>\n";   
    $conn = OCILogon("scott", "tiger");
    $stmt = OCIParse($conn, "select * from emp");
    OCIExecute($stmt);
    while (OCIFetch($stmt)) {
        echo "\n";   
        $ncols = OCINumCols($stmt);
        for ($i = 1; $i <= $ncols; $i++) {
            $column_name  = OCIColumnName($stmt, $i);
            $column_value = OCIResult($stmt, $i);
            echo $column_name . ': ' . $column_value . "\n";
        }
        echo "\n";
    }
    OCIFreeStatement($stmt);  
    OCILogoff($conn);   
    echo "</pre>";
?>   
]]>
      </programlisting>
     </example>
    </para>
   </refsect1>
  </refentry>

