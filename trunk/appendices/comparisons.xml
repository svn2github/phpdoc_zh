      <entry>&true;</entry>
      <entry>&true;</entry>
      <entry>&false;</entry>
      <entry>&false;</entry>
     </row>
     <row>
      <entry><varname>$x</varname> 尚未定义</entry>
      <entry><type>NULL</type></entry>
      <entry>&true;</entry>
      <entry>&true;</entry>
      <entry>&false;</entry>
      <entry>&false;</entry>
     </row>
     <row>
      <entry><literal>$x = array();</literal></entry>
      <entry><type>array</type></entry>
      <entry>&true;</entry>
      <entry>&false;</entry>
      <entry>&true;</entry>
      <entry>&false;</entry>
     </row>
     <row>
      <entry><literal>$x = false;</literal></entry>
      <entry><type>boolean</type></entry>
      <entry>&true;</entry>
      <entry>&false;</entry>
      <entry>&true;</entry>
      <entry>&false;</entry>
     </row>
     <row>
      <entry><literal>$x = true;</literal></entry>
